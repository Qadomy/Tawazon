<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ietmCardView"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/blackColor"
    android:layoutDirection="rtl"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/twinty_five_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            android:background="@drawable/profile" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:textColor="@color/whiteColor"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="الملف الشخصي والحساب" />

            <TextView
                android:id="@+id/descriptionTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:textColor="@color/whiteColor"
                android:textSize="15sp"
                tools:text="ملفك الشخصي واعدادات حسابك" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:background="@drawable/icarrow_left" />
    </LinearLayout>

</androidx.cardview.widget.CardView>